<Window x:Class="cadastro_pdv.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Funcionário" Height="720" Width="1280" Background="#D0EBFF">
    <Grid HorizontalAlignment="Center" Width="1280" Height="704" VerticalAlignment="Top">
        <TextBlock Text="CADASTRO DE FUNCIONÁRIO" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,76,0,580"/>

        <TextBlock Text="NOME" Margin="490,171,0,503" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="NomeTextBox" Width="300" Height="30" Margin="0,201,0,473" HorizontalAlignment="Center"/>

        <TextBlock Text="EMAIL" Margin="490,241,0,433" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="EmailTextBox" Width="300" Height="30" Margin="0,271,0,403" HorizontalAlignment="Center"/>

        <TextBlock Text="ID" Margin="490,311,0,363" HorizontalAlignment="Left" Width="38" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="IdTextBox" Width="300" Height="30" Margin="0,341,0,333" HorizontalAlignment="Center"/>

        <TextBlock Text="SENHA" Margin="490,376,0,301" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16"/>
        <PasswordBox x:Name="SenhaBox" Width="300" Height="30" Margin="0,403,0,271" HorizontalAlignment="Center"/>

        <Button x:Name="Cadastra" Content="SALVAR" Height="40" Margin="0,455,0,0" 
                Background="#4D6EFF" Foreground="White" FontWeight="Bold"
                Click="Cadastra_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Width="300" VerticalAlignment="Top">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.172"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="IR PARA LOGIN" Width="300" Height="40" Margin="0,517,0,147"
        Background="Gray" Foreground="White" FontWeight="Bold"
        Click="AbrirLogin_Click" HorizontalAlignment="Center"/>

    </Grid>
</Window>
