<Window x:Class="cadastro_pdv.TelaInicial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tela Inicial" Height="450" Width="800">

    <Grid Background="White">

        <!-- Texto grande de fundo -->
        <TextBlock Text="PDV"
                   FontSize="120"
                   FontWeight="Bold"
                   Foreground="LightGray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0.1"
                   IsHitTestVisible="False" />

        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="20">

            <Button Content="Cadastro"
                    Width="150" Height="50"
                    Margin="0,0,0,10"
                    Click="BtnCadastro_Click" />

            <Button Content="Vendas"
                    Width="150" Height="50"
                    Margin="0,0,0,10"
                    Click="BtnVendas_Click" />

            <Button Content="Relatorios"
                    Width="150" Height="50"
                    Margin="0,0,0,10"
                    Click="BtnRelatorios_Click" />

            <Button Content="Sair"
                    Width="150" Height="50"
                    Click="BtnSair_Click" />
        </StackPanel>

    </Grid>
</Window>
