<Window x:Class="cadastro_pdv.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login de Funcionário" Height="720" Width="1280" Background="#D0EBFF">
    <Grid RenderTransformOrigin="0.455,0.582" HorizontalAlignment="Center" Width="1280" Height="704" VerticalAlignment="Top">
        <TextBlock Text="Login de Funcionário" FontSize="24" FontWeight="Bold" Margin="498,97,498,565"/>

        <TextBlock Text="Email" Margin="490,215,585,460" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="EmailTextBox" Height="30" Margin="490,244,490,430"/>

        <TextBlock Text="Senha" Margin="490,295,694,375" FontWeight="Bold" FontSize="16"/>
        <PasswordBox x:Name="SenhaBox" Height="30" Margin="488,328,492,346"/>

        <Button Content="Entrar" Height="40" Margin="490,392,490,272" 
                Background="#4D6EFF" Foreground="White" FontWeight="Bold"
                Click="Login_Click"/>
        <Button Content="Cadastro" Height="40" Margin="490,450,490,214"
        Background="Gray" Foreground="White" FontWeight="Bold"
        Click="AbrirCadastro_Click"/>

    </Grid>
</Window>
